{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "shortDescription": {
      "type": "string"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "main_picture": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "main_picture_description": {
      "type": "text"
    },
    "secondary_pictures": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "variationCombinations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-variation-combination.product-variation-combination",
      "mappedBy": "product"
    },
    "technical_features": {
      "type": "component",
      "component": "product.key-value-pair",
      "repeatable": true
    },
    "additional_info": {
      "type": "component",
      "component": "product.key-value-pair",
      "repeatable": true
    },
    "product_reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-review.product-review",
      "mappedBy": "product"
    },
    "isNew": {
      "type": "boolean"
    },
    "discountPercentage": {
      "type": "integer",
      "min": 0,
      "max": 100
    },
    "promoEndDate": {
      "type": "date"
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "product"
    }
  }
}
