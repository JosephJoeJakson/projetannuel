{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "shortDescription": {
      "type": "string"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "main_picture": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    },
    "main_picture_description": {
      "type": "text"
    },
    "secondary_pictures": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": true
    },
    "variationCombinations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-variation-combination.product-variation-combination",
      "mappedBy": "product"
    }

  }
}
